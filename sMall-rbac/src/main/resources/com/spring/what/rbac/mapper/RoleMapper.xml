<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.what.rbac.mapper.RoleMapper">

    <resultMap id="roleVO" type="com.spring.what.rbac.vo.RoleVO" autoMapping="true">
        <id column="role_id" property="roleId"/>

        <collection property="menuIds" ofType="long">
            <id property="value" column="menu_id"/>
        </collection>

        <collection property="menuPermissionIds" ofType="long">
            <id property="value" column="menu_permission_id"/>
        </collection>
    </resultMap>

    <select id="page" resultType="com.spring.what.rbac.vo.RoleVO">
        select *
        from role
        where biz_type = #{systype}
          and tenant_id = #{tenantId}
    </select>

    <select id="selectRoleVO" resultMap="roleVO">
        select *
        from role r
                 left outer join role_menu rm on r.role_id = rm.role_id and r.role_id = #{roleid}
    </select>

</mapper>

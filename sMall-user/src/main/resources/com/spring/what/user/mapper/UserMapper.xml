<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.what.user.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.spring.what.user.model.User">
        <id property="userId" column="user_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="nickName" column="nick_name"/>
        <result property="pic" column="pic"/>
        <result property="status" column="status"/>
    </resultMap>

    <sql id="Base_Column_List">
        user_id,create_time,update_time,nick_name,pic,`status`
    </sql>
    <select id="getPage" resultType="com.spring.what.api.user.vo.UserApiVO">
        select
        <include refid="Base_Column_List"/>
        from user
        order by user_id desc
    </select>
    <select id="getByAddrId" resultType="com.spring.what.user.vo.UserSimpleInfoVO">
        select nick_name, pic
        from user
        where user_id = #{userid}
    </select>
    <select id="selectById" resultType="com.spring.what.api.user.vo.UserApiVO">
        select user_id, nick_name, pic, status
        from user
        where user_id = #{userid}
    </select>
</mapper>
